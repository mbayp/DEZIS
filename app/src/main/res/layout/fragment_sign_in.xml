<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:context=".presentation.fragments.authorization.sign_in.SignInFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/CenterWhiteText"
            android:id="@+id/tv_welcome"
            android:layout_marginTop="158dp"
            android:text="@string/signin_txt"
            android:textSize="24sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_log_in"
            style="@style/CustomTextInputLayout"
            android:layout_marginTop="30dp"
            android:hint="@string/e_mail">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_log_in"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/white" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_password"
            style="@style/CustomTextInputLayout"
            android:layout_marginTop="8dp"
            android:hint="@string/password_txt"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_passwordl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:textColor="@color/white" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            style="@style/CenterWhiteText"
            android:id="@+id/btn_forgot_password"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:text="@string/forgot_password_txt"
            android:layout_marginHorizontal="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_continue"
            style="@style/CustomMaterialButtonStyle"
            android:layout_marginTop="38dp"
            android:text="@string/continue_txt"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        style="@style/CenterWhiteText"
        android:id="@+id/terms_of_sale"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="18dp"
        android:layout_marginBottom="96dp"
        android:gravity="center"
        android:linksClickable="true"
        android:text="@string/policy_txt"
        android:textSize="12sp" />


</FrameLayout>