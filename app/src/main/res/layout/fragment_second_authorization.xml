<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:context=".presentation.fragments.authorization.SecondAuthorizationFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/CenterWhiteText"
            android:id="@+id/tv_registration"
            android:layout_marginTop="102dp"
            android:layout_marginBottom="16dp"
            android:text="@string/reg_txt"
            android:textSize="24sp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_address"
            style="@style/CustomTextInputLayout"
            android:layout_marginTop="24dp"
            android:hint="@string/address_txt"
            app:cursorColor="@color/dark_grey">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/white" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_num_flat"
            style="@style/CustomTextInputLayout"
            android:layout_marginTop="10dp"
            android:hint="@string/num_flat_txt">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_num_flat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/white" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            style="@style/CustomMaterialButtonStyle"
            android:id="@+id/btn_register"
            android:layout_marginTop="26dp"
            android:text="@string/continue_txt"
            />

    </LinearLayout>

    <TextView
        style="@style/CenterWhiteText"
        android:id="@+id/terms_of_sale"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="18dp"
        android:layout_marginBottom="96dp"
        android:gravity="center"
        android:linksClickable="true"
        android:text="@string/policy_txt"
        android:textSize="12sp" />


</FrameLayout>