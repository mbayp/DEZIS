<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ic_dezis"
        style="@style/CenteredImageWithMargin"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:src="@drawable/ic_dezis_and_text" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_user"
        style="@style/CustomMaterialButtonStyle"
        android:text="@string/user_txt" />

    <TextView
        style="@style/CenterWhiteText"
        android:text="@string/for_service" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_admin"
        style="@style/CustomMaterialButtonStyle"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="0dp"
        android:text="@string/admin_btn"
        app:backgroundTint="@color/dark_blue"
        app:strokeColor="@color/grey_dark"
        app:strokeWidth="1dp" />

    <TextView
        style="@style/CenterWhiteText"
        android:layout_marginBottom="0dp"
        android:text="@string/txt_sistem_sing" />
</LinearLayout>