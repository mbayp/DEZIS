<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_blue">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="wrap_content"
        android:id="@+id/ic_dezis"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_dezis_and_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="318dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="194dp"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="50dp"
        android:text="@string/user_txt"
        android:padding="16dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:cornerRadius="12dp"
        app:backgroundTint="@color/dark_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ic_dezis"
        />
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/for_order_txt"
        android:textColor="#B0B0B0"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/btn_user"
        app:layout_constraintStart_toStartOf="@id/btn_user"
        app:fontFamily="@font/roboto_reg"/>
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/for_managment_system_txt"
        android:textColor="#B0B0B0"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/btn_admin"
        app:layout_constraintStart_toStartOf="@id/btn_admin"
        app:fontFamily="@font/roboto_reg"/>




    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="@string/admin_txt"
        android:padding="16dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:cornerRadius="12dp"
        android:layout_marginTop="36dp"
        app:backgroundTint="@color/dark_blue"
        android:background="@drawable/button_stroke_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_user"
        app:layout_constraintStart_toStartOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>