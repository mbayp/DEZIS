<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
   >

    <!-- Календарь -->
    <CalendarView
        android:layout_marginHorizontal="16dp"
        android:id="@+id/calendarView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:dateTextAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/calendar_background"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    android:weekDayTextAppearance="?android:attr/textAppearanceSmall"/>

    <TextView
        android:layout_marginHorizontal="16dp"
        android:id="@+id/service_selection_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Выберите услугу:"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendarView" />

    <LinearLayout
        android:layout_marginHorizontal="16dp"
        android:id="@+id/services_checkbox_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/service_selection_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5">

        <CheckBox
            android:id="@+id/checkbox_disinfection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дезинфекция"
            android:textColor="@android:color/white" />

        <CheckBox
            android:id="@+id/checkbox_deratization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дератизация"
            android:textColor="@android:color/white" />

        <CheckBox
            android:id="@+id/checkbox_disinsection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дезинсекция"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <!-- Кнопка "Заказать услугу" -->
    <Button
        android:id="@+id/order_service_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Заказать услугу"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/blue"
        app:layout_constraintTop_toBottomOf="@+id/services_checkbox_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
