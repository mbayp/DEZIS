<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/calendar_card_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_white"
            android:dateTextAppearance="?android:attr/textAppearanceMedium"
            android:weekDayTextAppearance="?android:attr/textAppearanceSmall" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:textSize="18dp"

        android:id="@+id/service_selection_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:text="Выберите услугу:"
        android:textColor="@android:color/white"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendar_card_view" />

    <RadioGroup
        android:id="@+id/services_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/service_selection_label">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radio_disinfection"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дезинфекция"
            android:textColor="@android:color/white" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radio_deratization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дератизация"
            android:textSize="18dp"

            android:textColor="@android:color/white" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radio_disinsection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дезинсекция"
            android:textSize="18dp"

            android:textColor="@android:color/white" />

    </RadioGroup>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/order_service_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Заказать услугу"
        android:textColor="@android:color/white"
        app:backgroundTint="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/services_radio_group" />

</androidx.constraintlayout.widget.ConstraintLayout>
