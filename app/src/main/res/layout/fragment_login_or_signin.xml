<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_blue">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="wrap_content"
        android:id="@+id/ic_dezis"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_dezis_and_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="318dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="194dp"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_register"
        android:background="@drawable/button_background"
        android:textSize="16sp"
        app:backgroundTint="@color/button_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="148dp"
        android:text="@string/reg_txt"
        android:padding="16dp"
        android:textColor="@android:color/white"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ic_dezis"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_log_in"
        android:textSize="16sp"
        app:backgroundTint="@null"
        android:background="@drawable/button_background_second"
        app:cornerRadius="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="@string/sign_in_txt"
        android:padding="16dp"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_register"
        />


</androidx.constraintlayout.widget.ConstraintLayout>