<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ic_dezis"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        style="@style/CenteredImageWithMargin"
        android:src="@drawable/ic_dezis_and_text" />


    <Button
        style="@style/CustomMaterialButtonStyle"
        android:id="@+id/btn_register"
        android:layout_gravity="bottom"
        android:layout_marginBottom="100dp"
        android:background="@drawable/button_background"
        android:text="@string/reg_txt"
        />

    <com.google.android.material.button.MaterialButton
        style="@style/CustomMaterialButtonStyle"
        android:id="@+id/btn_log_in"
        android:layout_gravity="bottom"
        app:strokeColor="@color/grey_dark"
        app:strokeWidth="2dp"
        android:backgroundTint="@color/dark_blue"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="16dp"
        android:text="@string/sign_in_txt" />


</FrameLayout>