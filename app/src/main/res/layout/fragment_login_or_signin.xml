<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ic_dezis"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        style="@style/CenteredImageWithMargin"
        android:contentDescription="@string/desc_logo"
        android:src="@drawable/ic_dezis_and_text" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_gravity="bottom"
        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_register"
            style="@style/CustomMaterialButtonForOnBoard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/reg_txt"
            app:layout_constraintBottom_toTopOf="@id/btn_log_in"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_log_in"
            style="@style/CustomMaterialButtonForOnBoard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/sign_in_txt"
            app:backgroundTint="@color/dark_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:strokeColor="@color/grey_dark"
            app:strokeWidth="1dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>