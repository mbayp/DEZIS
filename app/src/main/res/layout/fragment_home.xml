<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".presentation.fragments.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="20dp"
            android:text="@string/Information_about_the_record"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_circle_color"
                    android:gravity="center"
                    android:text="@string/_1"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/bg_circle_color"
                    android:gravity="center"
                    android:text="@string/_2"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/bg_circle_color"
                    android:gravity="center"
                    android:text="@string/_3"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_thin"
                    android:text="@string/information1"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="16dp"
                    android:text="@string/information2"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/information3"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/services"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="380dp"
            android:layout_height="234dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/gray_2"
            app:cardCornerRadius="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@string/disinsection"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top|start"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="60dp"
                android:text="@string/disinsection_info"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_disinsection_info"
                android:layout_width="300dp"
                android:layout_height="44dp"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/blue_2"
                android:drawableEnd="@drawable/ic_line_arrow"
                android:gravity="start"
                android:text="@string/detailed"
                android:textColor="@color/white"
                app:cornerRadius="10dp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="380dp"
            android:layout_height="234dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/gray_2"
            app:cardCornerRadius="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@string/disinfection"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top|start"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="60dp"
                android:text="@string/disinfection_info"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_disinfection_info"
                android:layout_width="300dp"
                android:layout_height="44dp"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/blue_2"
                android:drawableEnd="@drawable/ic_line_arrow"
                android:gravity="start"
                android:text="@string/detailed"
                android:textColor="@color/white"
                app:cornerRadius="10dp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="380dp"
            android:layout_height="234dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/gray_2"
            app:cardCornerRadius="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@string/deratization"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top|start"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="60dp"
                android:text="@string/deratization_info"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_deratization_info"
                android:layout_width="300dp"
                android:layout_height="44dp"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/blue_2"
                android:drawableEnd="@drawable/ic_line_arrow"
                android:gravity="start"
                android:text="@string/detailed"
                android:textColor="@color/white"
                app:cornerRadius="10dp" />

        </androidx.cardview.widget.CardView>



    </LinearLayout>


</ScrollView>
