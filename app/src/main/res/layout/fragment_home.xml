<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray"
    android:fitsSystemWindows="true"
    tools:context=".presentation.fragments.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="20dp"
            android:text="@string/Information_about_the_record"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/tv_number1"
                style="@style/NumberTextViewStyle"
                android:text="@string/_1" />

            <TextView
                android:id="@+id/tv_information1"
                style="@style/InformationTextViewStyle"
                android:text="@string/information1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/tv_number2"
                style="@style/NumberTextViewStyle"
                android:text="@string/_2" />

            <TextView
                android:id="@+id/tv_information2"
                style="@style/InformationTextViewStyle"
                android:text="@string/information2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/tv_number3"
                style="@style/NumberTextViewStyle"
                android:text="@string/_3" />

            <TextView
                android:id="@+id/tv_information3"
                style="@style/InformationTextViewStyle"
                android:text="@string/information3" />
        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/services"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <androidx.cardview.widget.CardView
            style="@style/ServiceCardView"
            app:cardCornerRadius="12dp">

            <TextView
                android:id="@+id/tv_title_disinfection"
                style="@style/ServiceTitleTextView"
                android:text="@string/disinfection" />

            <TextView
                android:id="@+id/tv_description_disinfection"
                style="@style/ServiceDescriptionTextView"
                android:text="@string/disinfection_info" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_details_disinfection"
                style="@style/ServiceButton"
                app:cornerRadius="10dp"
                android:text="@string/detailed" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/ServiceCardView"
            app:cardCornerRadius="12dp"
            android:layout_height="260dp"
            >

            <TextView
                android:id="@+id/tv_title_disinsection"
                style="@style/ServiceTitleTextView"
                android:text="@string/disinsection_txt" />

            <TextView
                android:id="@+id/tv_description_disinsection"
                style="@style/ServiceDescriptionTextView"
                android:text="@string/disinsection_info" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_details_disinsection"
                style="@style/ServiceButton"
                app:cornerRadius="10dp"
                android:text="@string/detailed" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/ServiceCardView"
            app:cardCornerRadius="12dp">

            <TextView
                android:id="@+id/tv_title_deratization"
                style="@style/ServiceTitleTextView"
                android:text="@string/deratization" />

            <TextView
                android:id="@+id/tv_description_deratization"
                style="@style/ServiceDescriptionTextView"
                android:text="@string/deratization_info" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_details_deratization"
                style="@style/ServiceButton"
                app:cornerRadius="10dp"
                android:text="@string/detailed" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</ScrollView>