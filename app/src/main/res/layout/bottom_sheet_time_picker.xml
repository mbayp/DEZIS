<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выберите время"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingBottom="8dp"/>

    <Button
        android:id="@+id/timeButton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="10:00 - 11:00" />

    <Button
        android:id="@+id/timeButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12:00 - 13:00" />

    <Button
        android:id="@+id/timeButton3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="14:00 - 15:00" />

    <Button
        android:id="@+id/timeButton4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="16:00 - 17:00" />

</LinearLayout>
