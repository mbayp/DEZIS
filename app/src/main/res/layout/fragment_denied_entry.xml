<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ic_waiting"
        style="@style/CenteredImageWithMargin"
        android:layout_marginTop="110dp"
        android:src="@drawable/ic_denied" />

    <TextView
        android:id="@+id/txt_denied"
        style="@style/CenterWhiteText"
        android:layout_marginHorizontal="74dp"
        android:gravity="center"
        android:text="@string/denied_txt"
        android:textSize="16sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_continue"
        style="@style/CustomMaterialButtonStyle"
        android:layout_marginTop="10dp"
        android:text="@string/return_to_entrance_txt" />

</LinearLayout>